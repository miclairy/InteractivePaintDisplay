<Window x:Class="KinectV2MouseControl.DrawingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Draw" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded"
        WindowState="Maximized">

	<DockPanel>
		<Canvas x:Name="drawArea" MouseDown="drawArea_MouseDown" MouseMove="drawArea_MouseMove" RenderTransformOrigin="0.5,0.5" Background="White" MouseUp="drawArea_MouseUp" >
			<DockPanel>
				<Viewbox Canvas.Left="189" Canvas.Top="120" >
					<Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
				</Viewbox>
			</DockPanel>
		</Canvas>
	</DockPanel>
	
</Window>
