<Window x:Class="KinectV2InteractivePaint.DrawingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:k="http://schemas.microsoft.com/kinect/2014"
		Title="Draw" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded"
        WindowState="Maximized">
	
	<k:KinectRegion x:Name="kinectRegion" Loaded="kinectRegion_Loaded">
		<ContentControl x:Name="inputRegion">
			<DockPanel>
				<Canvas x:Name="drawArea" MouseDown="drawArea_MouseDown" RenderTransformOrigin="0.5,0.5" Background="White" MouseUp="drawArea_MouseUp" >
					<DockPanel x:Name="userVideo">
						<Viewbox Canvas.Left="189" Canvas.Top="120" >
							<Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
						</Viewbox>
					</DockPanel>
				</Canvas>
			</DockPanel>
		</ContentControl>
	</k:KinectRegion>
	
</Window>
